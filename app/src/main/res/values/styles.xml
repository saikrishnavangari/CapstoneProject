<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme"></style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="detailactivity_textviewAttributes_label" parent="android:TextAppearance">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_spacing</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">@dimen/subheadingTextSize</item>
    </style>

    <style name="detailactivity_textviewAttributes_labelContent" parent="android:TextAppearance">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_spacing</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_spacing</item>
        <item name="android:textSize">@dimen/bodyTextSize</item>
    </style>

    <style name="DetailActivity" parent="AppTheme">

    </style>

    <dimen name="subheadingTextSize">16sp</dimen>
</resources>
